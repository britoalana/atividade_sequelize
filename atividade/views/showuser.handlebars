<div class="container">
    {{#each users}}
    <div class="item">
        <h2>{{this.name}}</h2>
        <p>{{this.email}}</p>
        <div class="actions">
            <a href="/users/{{this.id}}" class="details-btn">Ver detalhes</a>
            <a href="/users/edit/{{this.id}}" class="edit-btn">Editar</a>
            <form action="/users/delete/{{this.id}}" method="post">
                <input class="delete-btn" type="submit" value="Excluir" >
            </form>

        </div>
    </div>
    {{/each}}
</div>